<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="claseS3.vistas.login"
             Title="login">
    <VerticalStackLayout
        Spacing="20"
        Margin="20"
        >
        <Label 
            Text="Inicio de sesion" 
            HorizontalTextAlignment="Center"
            FontSize="15"
            TextColor="Red"/>

        <Image Source="https://png.pngtree.com/png-vector/20191003/ourmid/pngtree-user-login-or-authenticate-icon-on-gray-background-flat-icon-ve-png-image_1786166.jpg"
               WidthRequest="100"
               />

        <Image Source="login.jpg" 
            WidthRequest="100"
            
            />

        <Entry x:Name="txtUsuario"
               Placeholder="Ingrese el usuario"
               />
        <Entry x:Name="txtContraseña"
               Placeholder="Ingrese la contraseña"
               IsPassword="True"
            />

        <Button x:Name="Inicio" Text="Iniciar Sesion" Clicked="Inicio_Clicked"/>

        <Button x:Name="Registro" Text="Registrar Usuario" Clicked="Registro_Clicked" />





    </VerticalStackLayout>
</ContentPage>